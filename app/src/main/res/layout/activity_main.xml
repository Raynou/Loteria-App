<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:id="@+id/mainToolbar">
        </include>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate"
                    android:id="@+id/btnGenerate">

                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:id="@+id/downloadButton">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnNewGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Grid"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/guardar"
                    android:text="Guardar">

                </Button>
            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:id="@+id/tabla"
            android:layout_width="wrap_content"
            android:layout_height="529dp"
            android:layout_gravity="center"
            android:columnCount="4"
            android:rowCount="4"
            >

            <!-- Row 0 -->
            <ImageView
                android:id="@+id/img1"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img2"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img3"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img4"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">


                <!-- Row 1 -->

            </ImageView>

            <ImageView android:id="@+id/img5"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img6"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img7"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img8"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>


            <!-- Row 2 -->

            <ImageView android:id="@+id/img9"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>


            <ImageView android:id="@+id/img10"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>



            <ImageView android:id="@+id/img11"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>



            <ImageView android:id="@+id/img12"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>



            <!-- Row 3 -->

            <ImageView android:id="@+id/img13"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>


            <ImageView android:id="@+id/img14"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img15"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

            <ImageView android:id="@+id/img16"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@color/black"
                android:layout_margin = "0.5dp"
                android:paddingHorizontal="50dp"      
                android:paddingVertical="65dp">

            </ImageView>

        </GridLayout>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

    
</RelativeLayout>